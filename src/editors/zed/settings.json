{
  "base_keymap": "JetBrains",
  //
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  //
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSameLine": true
  },
  //
  "theme": "One Dark",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "vertical_scroll_margin": 5,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  //
  "tab_bar": {
    "show": false
  },
  "gutter": {
    "line_numbers": false,
    "code_actions": false,
    "folds": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "indent_guides": {
    "enabled": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  //
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "features": {
    "copilot": false
  },
  "chat_panel": {
    "button": false
  },
  //
  "language_overrides": {
    "Markdown": {
      "soft_wrap": "editor_width"
    }
  }
}
