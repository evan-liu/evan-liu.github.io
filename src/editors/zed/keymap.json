[
  {
    "context": "Editor",
    "bindings": {
      "ctrl-y": "vim::JoinLines",
      //
      "ctrl-j": [
        "workspace::SendKeystrokes",
        "5 j"
      ],
      "ctrl-k": [
        "workspace::SendKeystrokes",
        "5 k"
      ],
      //
      "ctrl-h": "pane::GoBack",
      "ctrl-l": "pane::GoForward",
      "cmd-j": [
        "editor::SelectNext",
        {
          "replace_newest": true
        }
      ],
      "cmd-k cmd-k": [
        "editor::SelectPrevious",
        {
          "replace_newest": true
        }
      ],
      //
      "alt-j": "editor::SelectSmallerSyntaxNode",
      "alt-k": "editor::SelectLargerSyntaxNode",
      //
      "cmd-shift-j": "editor::MoveLineDown",
      "cmd-shift-k": "editor::MoveLineUp",
      //
      "alt-ctrl-j": "editor::GoToDiagnostic",
      "alt-ctrl-k": "editor::GoToPrevDiagnostic",
      //
      "cmd-ctrl-j": "editor::GoToHunk",
      "cmd-ctrl-k": "editor::GoToPrevHunk",
      //
      "cmd-alt-ctrl-j": "editor::AddSelectionBelow",
      "cmd-alt-ctrl-k": "editor::AddSelectionAbove",
      "cmd-alt-ctrl-f": "editor::SelectNext",
      //
      "ctrl-w r": "pane::SplitRight",
      //
      "alt-w": "workspace::CloseInactiveTabsAndPanes"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "shift-j": "vim::LineDown",
      "shift-k": "vim::LineUp",
      //
      "shift-u": "editor::Redo",
      //
      "g s": "pane::RevealInProjectPanel",
      //
      "space w": "workspace::SaveAll",
      "space enter": "editor::ToggleCodeActions",
      //
      "space a l": "editor::ConvertToLowerCase",
      "space a u": "editor::ConvertToUpperCase",
      "space a c": "editor::ConvertToLowerCamelCase",
      "space a p": "editor::ConvertToUpperCamelCase",
      "space a k": "editor::ConvertToKebabCase",
      "space a s": "editor::ConvertToSnakeCase",
      "space a t": "editor::ConvertToTitleCase",
      //
      "space f f": "file_finder::Toggle",
      "space f j": "file_finder::Toggle",
      "space f a": "command_palette::Toggle",
      "space f p": "projects::OpenRecent",
      "space f t": "pane::DeploySearch",
      //
      "space d h": "editor::Hover",
      //
      "space s b": "branches::OpenRecent",
      "space s B": "editor::ToggleGitBlame",
      "space s l": "editor::RevertSelectedHunks",
      //
      "space j d": "editor::GoToDefinition",
      "space j D": "editor::GoToDefinitionSplit",
      "space j t": "editor::GoToTypeDefinition",
      "space j T": "editor::GoToTypeDefinitionSplit",
      "space j i": "editor::GoToImplementation",
      "space j I": "editor::GoToImplementationSplit",
      //
      "space j u": "editor::FindAllReferences",
      "space j m": "outline::Toggle",
      //
      "space k r": "editor::Rename",
      //
      "space space l": "workspace::CloseAllDocks",
      "space l p": "project_panel::ToggleFocus",
      "space l t": "terminal_panel::ToggleFocus",
      "space l c": "collab_panel::ToggleFocus",
      "space l e": "diagnostics::Deploy",
      //
      "space space e": "task::Spawn",
      //
      "space space c": "editor::ShowCompletions",
      "space c c": "editor::ShowCompletions",
      //
      "space x x": "pane::CloseActiveItem",
      "space space x": "workspace::CloseWindow",
      //
      "space v l": "workspace::ToggleLeftDock",
      "space v r": "workspace::ToggleRightDock",
      "space v b": "workspace::ToggleBottomDock",
      //
      "space v h": "zed::Hide",
      "space v t": "editor::ToggleTabBar",
      "space v n": "editor::ToggleLineNumbers",
      "space v w": "editor::ToggleSoftWrap",
      "space v i": "editor::ToggleInlayHints",
      "space v T": "theme_selector::Toggle",
      //
      "space z k": "zed::OpenKeymap",
      "space z K": "zed::OpenDefaultKeymap",
      "space z s": "zed::OpenSettings",
      "space z S": "zed::OpenDefaultSettings"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "bindings": {
      "cmd-escape": "workspace::CloseAllDocks"
    }
  }
]
