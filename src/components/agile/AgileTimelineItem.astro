---
import LucideIcon from '../LucideIcon.astro'
import OnLineMarker from '../OnLineMarker.astro'

interface Props {
  time: string
  title?: string
}
---

<div class="relative flex gap-4 items-baseline ml-4">
  <OnLineMarker class="mt-[-2px]">
    <LucideIcon icon="Calendar" class="text-sl-gray-3" />
  </OnLineMarker>

  <span>{Astro.props.time}</span>
  <span class="text-xl font-semibold">{Astro.props.title}</span>
</div>

<div class="ml-4">
  <slot />
</div>
