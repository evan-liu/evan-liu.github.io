---
import { cn } from '@lib/utils'
import LucideIcon from './LucideIcon.astro'

interface Props {
  url: string
}

let { url } = Astro.props
---

<a
  href={url}
  target="_blank"
  class={cn(
    'relative flex rounded-lg border p-4 no-underline border-sl-gray-5',
    'hover:border-sl-gray-2',
  )}>
  <span class="flex-1">{url}</span>
  <LucideIcon icon="Download" size={20} />
</a>

<style>
  a {
    box-shadow: var(--sl-shadow-sm);
  }
  a:hover {
    background: var(--sl-color-gray-7, var(--sl-color-gray-6));
  }
</style>
